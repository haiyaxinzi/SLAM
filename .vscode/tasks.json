{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-std=c++11",
				"-o",
				"${workspaceRoot}/temp/${fileBasenameNoExtension}.out",
				"-fexec-charset==GBK",
			]
		}
	]
}